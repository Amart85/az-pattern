                "subnetName": "[variables('vnetArray')[0].subnet1Name]",
                "pipObject": {
                    "id": "[resourceId( 'Microsoft.Network/publicIPAddresses',concat( variables('vmhub'),'-pubIP' )  )]"
                },
                "nsgName": "[concat(variables('vmhub'),'-nsg')]",
                "enableIPForwarding": false,
                "acceleratedNetworking": false
            },
